---
# For configuration options and examples, please see:
# https://gethomepage.dev/latest/configs/services

- Calendar:
    - Calendar:
        widget:
          type: calendar
          firstDayInWeek: monday
          view: monthly
          maxEvents: 10
          showTime: true
          timezone: Europe/Vilnius
          integrations:
              - type: sonarr
                service_group: Arr Stack
                service_name: Sonarr
                color: teal
                params:
                  unmonitored: false

- Media:
    - Memos:
        href: https://memos.home.lab/
        icon: memos.png
        siteMonitor: https://memos.home.lab/
    - Audiobookshelf:
        href: https://audiobookshelf.home.lab/
        icon: audiobookshelf.png
        siteMonitor: https://audiobookshelf.home.lab/
    - Filebrowser:
        href: https://filebrowser.home.lab/
        icon: filebrowser.png
        siteMonitor: https://filebrowser.home.lab/
    - Nextcloud:
        href: https://nextcloud.home.lab/
        icon: nextcloud.png
        siteMonitor: https://nextcloud.home.lab/
    - Vaultwarden:
        href: https://vaultwarden.home.lab/
        icon: vaultwarden.png
        siteMonitor: https://vaultwarden.home.lab/

- Server:
    - Portainer:
        href: "https://docker.home.lab:9443/#!/auth"
        icon: portainer.png
        ping: 192.168.1.13
        widget:
          type: portainer
          url: https://docker.home.lab:9443
          env: 2
          key: {{ portainer_key }}
    - Docker Server:
        href: https://docker.home.lab:9090/
        icon: docker.png
        ping: 192.168.1.13
    - Raspberry Pi:
        href: https://pihole.home.lab:9090/
        icon: raspberry-pi.png
        ping: 192.168.1.40
    - 5G Gateway:
        href: http://192.168.2.1
        icon: mdi-wan
        ping: 192.168.2.1
    - Router:
        href: https://192.168.1.1/
        icon: mdi-lan
        ping: 192.168.1.1

- Arr Stack:
    - Sonarr:
        href: https://sonarr.home.lab/
        icon: sonarr.png
        siteMonitor: https://sonarr.home.lab/
        widget:
            type: sonarr
            url: http://sonarr:8989
            key: {{ sonarr_key }}
    - Radarr:
        href: https://radarr.home.lab/
        icon: radarr.png
        siteMonitor: https://radarr.home.lab/
    - Prowlarr:
        href: https://prowlarr.home.lab/
        icon: prowlarr.png
        siteMonitor: https://prowlarr.home.lab/
    - Jellyseerr:
        href: https://jellyseerr.home.lab/
        icon: jellyseerr.png
        siteMonitor: https://jellyseerr.home.lab/
    - Jellyfin:
        href: https://jellyfin.home.lab/
        icon: jellyfin.png
        siteMonitor: https://jellyfin.home.lab/

- Monitoring:
    - PiHole:
        href: http://pihole.home.lab/admin
        icon: pi-hole.png
        ping: 192.168.1.40
        siteMonitor: http://pihole.home.lab/admin
    - Grafana:
        href: https://grafana.home.lab/
        icon: grafana.png
        siteMonitor: https://grafana.home.lab/
    - Librespeed:
        href: http://docker.home.lab:9008/
        icon: librespeed.png
        siteMonitor: http://docker.home.lab:9008/
    - EmonESP:
        href: http://192.168.1.242/
        icon: lnbits.png
